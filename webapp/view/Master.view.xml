<mvc:View
    controllerName="ui5.walkthrough.controller.Master"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="masterPage" backgroundDesign="List">
        <customHeader>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Title text="{= 'Purchase Orders (' + ${orderModel>/orderCount} + ')' }" />
                <ToolbarSpacer />
            </OverflowToolbar>
        </customHeader>
        <subHeader>
            <OverflowToolbar>
                <SearchField liveChange=".onSearch" width="100%" />
            </OverflowToolbar>
        </subHeader>
        <List
            id="PurchaseOrderList"
            items="{/A_PurchaseOrder}"
            mode="SingleSelectMaster"
            includeItemInSelection="true"
            updateFinished=".updateOrderCount"
            selectionChange=".onOrderPress"

            itemPress=".onOrderPress">
            <CustomListItem press=".onOrderPress">
                <HBox>
                    <VBox width="70%">
                        <Text text="Delivery Date: 01.01.1970"/>
                        <Text text="{PurchaseOrder}" />
                        <Text text="{AddressName}" />
                        <Text text="{= 'Created By: ' + ${CreatedByUser} }" class="createdByText" />
                    </VBox>
                    <VBox width="30%" alignItems="End">
                        <Text text="{path: 'LastChangeDateTime', formatter: '.formatter.dateFormatter'}" />
                        <Text text="{DocumentCurrency}" />
                    </VBox>
                </HBox>
            </CustomListItem>
        </List>
    </Page>
</mvc:View>
